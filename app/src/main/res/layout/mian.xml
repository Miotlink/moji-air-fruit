<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:text="激活"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/getData"
        android:text="获取数据"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/jiance"
        android:text="检测"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/get_jiance_time"
        android:text="获取检测时间"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/set_jiance_time"
        android:text="获取检测时间"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/play"
        android:text="播放声音"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/get_dingshi_play"
        android:text="获取定时"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/dingshi_play"
        android:text="设置定时播放"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:text="音量设置"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <SeekBar
        android:id="@+id/probar"
        android:layout_width="match_parent"
        android:max="100"
        android:progress="50"
        android:secondaryProgress="70"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="20dp"/>

</LinearLayout>